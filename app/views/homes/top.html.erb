<!DOCTYPE html>
<html>
  <head>
    <title>Snuggle</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <link href="<%= image_path("apple-touch-icon.png") %>" rel="apple-touch-icon" sizes="180x180" type="image/png" />
    <link href="<%= image_path("android-touch-icon.png") %>" rel="apple-touch-icon" sizes="192x192" type="image/png" />
  </head>
  
  <body>
  <% if user_signed_in? %>
    <li class="text-secondary px-2 py-1 m-1">
    <%= link_to user_path(current_user), class: 'nav-link' do %>
    <i class="fas fa-home"></i>マイページ
  <% end %>
  
    <% if %w[root about].any? {|name| current_page?(send("#{name}_path"))} %>
    <div class="flash-messages pt-2 bg-white">
      <span id="notice" class="d-flex justify-content-center"><%= notice %></span>
      <span id="alert" class="d-flex justify-content-center"><%= alert %></span>
    </div>
  <% else %>
    <div class="flash-messages pt-2 bg-light">
      <span id="notice" class="d-flex justify-content-center"><%= notice %></span>
      <span id="alert" class="d-flex justify-content-center"><%= alert %></span>
    </div>
  <% end %>
  <%= yield %>
  </body